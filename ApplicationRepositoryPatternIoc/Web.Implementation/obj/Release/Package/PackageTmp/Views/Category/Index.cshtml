@model IEnumerable<Web.Implementation.Models.CategoryModel>

@{
    ViewBag.Title = "<tag>Category</tag>";
}

<h2><tag>Category</tag></h2>

<p>
    @Html.ActionLink("<tag>Create New</tag>", "Create")
</p>
<table>
    <tr>
        <th>
            <tag>Name</tag>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("<tag>Edit</tag>", "Edit", new { id=item.Id }) |
            @Html.ActionLink("<tag>Details</tag>", "Details", new { id=item.Id }) |
            @Html.ActionLink("<tag>Delete</tag>", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
